<div class="container">
  <div class="row">
    <div class="col-12" style="margin:0 auto; position: relative;">

      <h1 class="my-5"> By Clicking on a particular date below, you have access to the records of each player that presented symptoms on a that day</h1>
    </div>
    <div class="col-8">
<% @flags_with_dates.each do |key, array| %>
  <p> <%= key %>  </p>

        <% array.each do |flag| %>
        <p> <%= flag.user.name %> </p>
        <%= link_to "view form", covid_form_path(flag.covid_form_id) %>
        <% end %>

</div><% end %>
    </div>
  </div>
</div>
